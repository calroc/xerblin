import sys
import os
import getopt

from xerblin.lib import words
from xerblin import Object
from xerblin.messaging import ListModel


def runStartScript(interp, start_script):
    #Make sure it's a file..
    if not os.path.isfile(start_script):
        print >> sys.stderr, "Start script '%s' not a file." % start_script
        return

    #Get the script's contents.
    script = open(start_script).read()

    #Try interpreting the script.
    try:
        interp.interpret(script)

    except:
        print >> sys.stderr, "Start script '%s' failed." % start_script


    #Get the start script option if any
    if start_script:
        runStartScript(interp, start_script)


def getOpts(args):
    '''
    Get our options.
    '''
    opts = dict(getopt.getopt(args[1:], 's:')[0])
    start_script = opts.get('-s')
    return start_script


def main(args=None):
    '''
    '''
    if args is None:
        args = sys.argv

    start_script = getOpts(args)

    I = Object(dictionary=words, stack=ListModel())

    if start_script:
        runStartScript(I, start_script)

    while True:
        input_ = raw_input('xerblin: ')
        I.interpret(input_)


if __name__ == '__main__':
    main()
